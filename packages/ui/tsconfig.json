{
	"extends": "@barely/tsconfig/internal-package.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "ES2022"],
		"jsx": "preserve",
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"module": "esnext",
		"rootDir": "./src"
	},
	"include": [
		"src/bio/**/*",
		"src/charts/**/*",
		"src/components/**/*",
		"src/elements/**/*",
		"src/forms/**/*",
		"src/hooks/**/*",
		"src/images/**/*",
		"src/invoice/**/*",
		"src/utils/**/*",
		"tailwind.config.ts"
	],
	"exclude": ["node_modules", "coverage"]
}
