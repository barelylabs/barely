{
	"extends": "@barely/tsconfig/internal-package.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "ES2022"],
		"jsx": "preserve",
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"module": "esnext"
	},
	"include": [
		"./charts/**/*",
		"./components/**/*",
		"./elements/**/*",
		"./forms/**/*",
		"./hooks/**/*",
		"./images/**/*",
		"./utils/**/*",
		"tailwind.config.ts"
	],
	"exclude": ["node_modules"]
}
