{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Remix",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"allowJs": true,
		"lib": ["DOM", "DOM.Iterable", "ES2019"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"noEmit": true,
		"target": "ES2019"
	},
	"exclude": ["node_modules"]
}
