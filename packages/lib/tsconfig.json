{
	"extends": "@barely/tsconfig/internal-package.json",
	"compilerOptions": {
		"lib": ["ES2022", "DOM"],
		"jsx": "preserve", // fixme: this is how we're handling email templates bubbling up through packages for now. i guess it makes sense - if a package is handling jsx, ts needs to know what to do with it ü§∑‚Äç‚ôÇÔ∏è
		"rootDir": ".",
		"outDir": "dist",
		"plugins": [
			{
				"name": "trpc-navigation-plugin",
				"router": {
					"filePath": "./src/trpc/routes/app.route.ts",
					"variableName": "appRouter"
				}
			}
		]
	},
	"include": ["src", "*.ts"],
	"exclude": ["node_modules", "dist", "coverage"]
}
