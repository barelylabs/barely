{
	"name": "@barely/email",
	"version": "0.1.0",
	"private": true,
	"workspaces": [
		".react-email"
	],
	"scripts": {
		"dev": "pnpm with-env email dev --port 3011 --dir src/templates",
		"clean": "rm -rf .turbo node_modules",
