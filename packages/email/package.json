		"@types/pretty": "^2.0.1",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"eslint": "catalog:",
		"prettier": "catalog:",
		"tailwindcss": "catalog:",
		"typescript": "catalog:",
		"zod": "^3.23.8"
	},
	"dependencies": {
		"@neondatabase/serverless": "^0.5.7",
		"@react-email/components": "catalog:",
		"@t3-oss/env-nextjs": "catalog:",
		"html-to-text": "^9.0.5",
		"pretty": "^2.0.0",
		"react": "catalog:react19",
		"react-dom": "catalog:react19",
		"react-email": "^4.0.16",
		"resend": "^4.6.0"
