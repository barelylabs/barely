		"@barely/tsconfig": "workspace:*",
		"@types/html-to-text": "^9.0.1",
		"@types/node": "^20.10.6",
		"@types/pretty": "^2.0.1",
		"@types/react": "^18.2.25",
		"@types/react-dom": "^18.2.18",
		"eslint": "^8.57.0",
		"prettier": "^3.2.5",
		"tailwindcss": "^3.4.0",
		"typescript": "^5.4.3"
	},
	"dependencies": {
		"@react-email/components": "^0.0.17",
		"@t3-oss/env-nextjs": "^0.10.1",
		"html-to-text": "^9.0.5",
		"pretty": "^2.0.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
