{
	"name": "@barely/db",
	"version": "0.1.0",
	"type": "module",
	"main": "./index.ts",
	"types": "./index.ts",
	"license": "MIT",
	"scripts": {
		"clean": "rm -rf .turbo node_modules",
		"with-env": "dotenv -e ../../.env --",
		"dev": "pnpm with-env prisma studio --port=5555 --browser=none",
		"db:push": "pnpm with-env prisma db push",
		"db:push:force": "pnpm with-env prisma db push --accept-data-loss",
		"db:generate": "pnpm with-env prisma generate",
		"db:seed": "ts-node ./prisma/seed.ts"
	},
	"dependencies": {
		"@barely/env": "*",
		"@planetscale/database": "^1.5.0",
		"@prisma/client": "^4.14.0",
		"kysely": "^0.22.0",
		"kysely-planetscale": "^1.2.0",
		"prisma-kysely": "^1.2.1"
	},
	"devDependencies": {
		"@barely/config": "*",
		"@types/node": "^18.0.0",
		"dotenv-cli": "^6.0.0",
		"prisma": "^4.14.0",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.1",
		"typescript": "^5.0.0"
	}
}
