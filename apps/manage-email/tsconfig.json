{
	"extends": "@barely/tsconfig/base.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "ES2022"],
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"@public/*": ["./public/*"],
			"@static/*": ["./public/_static/*"]
		},
		"plugins": [{ "name": "next" }],
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"module": "esnext"
	},
	"include": [".", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "coverage"]
}
