{
	"name": "@barely/sparrow",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "pnpm with-env next build",
		"build:preview": "pnpm with-env vercel build",
		"build:production": "pnpm with-env vercel build --prod",
		"clean": "git clean -xdf .next .turbo node_modules",
		"clean:rm": "rm -rf node_modules && rm -f pnpm-lock.yaml",
		"dev": "pnpm with-env next dev -p 3008",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"start": "pnpm with-env next start",
		"test": "pnpm with-env vitest",
		"test:watch": "pnpm with-env vitest --watch",
		"test:coverage": "pnpm with-env vitest --coverage",
		"typecheck": "tsc --noEmit",
		"with-env": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@barely/email": "workspace:*",
		"@barely/hooks": "workspace:*",
		"@barely/lib": "workspace:*",
		"@barely/toast": "workspace:*",
		"@barely/ui": "workspace:*",
		"@barely/utils": "workspace:*",
		"@t3-oss/env-nextjs": "catalog:",
		"@vercel/edge": "^0.1.2",
		"dotenv-cli": "^7.4.1",
		"gray-matter": "^4.0.3",
		"jiti": "^1.21.0",
		"next": "catalog:",
		"react": "catalog:react19",
		"react-dom": "catalog:react19",
		"react-icons": "^4.11.0",
		"sharp": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@babel/core": "^7.22.9",
		"@barely/eslint-config": "workspace:*",
		"@barely/prettier-config": "workspace:*",
		"@barely/tailwind-config": "workspace:*",
		"@barely/tsconfig": "workspace:*",
		"@svgr/webpack": "^6.5.1",
		"@tailwindcss/typography": "catalog:",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.1.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "catalog:",
		"@types/react": "catalog:react19",
		"@types/react-dom": "catalog:react19",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitest/coverage-v8": "^2.1.8",
		"autoprefixer": "^10.4.14",
		"eslint": "catalog:",
		"happy-dom": "^15.11.7",
		"postcss": "catalog:",
		"prettier": "catalog:",
		"tailwindcss": "catalog:",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "catalog:",
		"vitest": "^2.1.8"
	},
	"prettier": "@barely/prettier-config"
}
