{
	"name": "@barely/sparrow",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "pnpm with-env next build",
		"build:preview": "pnpm with-env vercel build",
		"build:production": "pnpm with-env vercel build --prod",
		"clean": "git clean -xdf .next .turbo node_modules",
		"clean:rm": "rm -rf node_modules && rm -f pnpm-lock.yaml",
		"dev": "pnpm with-env next dev -p 3007",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
		"start": "pnpm with-env next start",
		"typecheck": "tsc --noEmit",
		"with-env": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@barely/email": "workspace:*",
		"@barely/lib": "workspace:*",
		"@barely/ui": "workspace:*",
		"@t3-oss/env-nextjs": "^0.10.1",
		"@vercel/edge": "^0.1.2",
		"dotenv-cli": "^7.4.1",
		"gray-matter": "^4.0.3",
		"jiti": "^1.21.0",
		"next": "^14.2.3",
		"react-dom": "18.2.0",
		"react-icons": "^4.11.0",
		"sharp": "^0.33.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@babel/core": "^7.22.9",
		"@barely/eslint-config": "workspace:*",
		"@barely/prettier-config": "workspace:*",
		"@barely/tailwind-config": "workspace:*",
		"@barely/tsconfig": "workspace:*",
		"@svgr/webpack": "^6.5.1",
		"@tailwindcss/typography": "^0.5.9",
		"@types/node": "^20.10.6",
		"@types/react": "^18.2.25",
		"@types/react-dom": "^18.2.18",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.57.0",
		"postcss": "^8.4.32",
		"prettier": "^3.5.3",
		"tailwindcss": "^3.4.0",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.5.4"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"@barely/eslint-config/base",
			"@barely/eslint-config/nextjs",
			"@barely/eslint-config/react"
		]
	},
	"prettier": "@barely/prettier-config"
}
