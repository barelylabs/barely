{
  "extends": "@barely/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@static/*": [
        "./public/_static/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@barely/server/*": [
        "./node_modules/@barely/lib/server/*"
      ],
      "@barely/api/*": [
        "./node_modules/@barely/lib/server/api/*"
      ],
      "@barely/atoms/*": [
        "./node_modules/@barely/lib/atoms/*"
      ],
      "@barely/hooks/*": [
        "./node_modules/@barely/lib/hooks/*"
      ],
      "@barely/utils/*": [
        "./node_modules/@barely/lib/utils/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    ".",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
