{
  "name": "@barely/link",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env next build",
    "build:vercel": "pnpm with-env vercel build",
    "build:prod": "pnpm with-env vercel build --prod",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev -- -p 3002",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@barely/env": "workspace:^0.1.0",
    "@barely/lib": "workspace:^0.1.0",
    "@barely/ui": "workspace:^0.1.0",
    "@vercel/edge": "^0.1.2",
    "dotenv-cli": "^7.2.1",
    "html-escaper": "^3.0.3",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.31.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@barely/eslint-config": "workspace:^0.1.0",
    "@barely/prettier-config": "workspace:^0.1.0",
    "@barely/tailwind-config": "workspace:^0.1.0",
    "@barely/tsconfig": "workspace:^0.1.0",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@barely/eslint-config/base",
      "@barely/eslint-config/nextjs",
      "@barely/eslint-config/react"
    ]
  },
  "prettier": "@barely/prettier-config"
}
