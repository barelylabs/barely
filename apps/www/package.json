{
	"name": "@barely/www",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "pnpm with-env next build",
		"build:preview": "pnpm with-env vercel build",
		"build:production": "pnpm with-env vercel build --prod",
		"clean": "git clean -xdf .cache .next .turbo dist node_modules",
		"dev": "pnpm with-env next dev --port=3008",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"start": "pnpm with-env next start",
		"test": "pnpm with-env vitest",
		"test:watch": "pnpm with-env vitest --watch",
		"test:coverage": "pnpm with-env vitest --coverage",
		"typecheck": "tsc --noEmit",
		"with-env": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@barely/const": "workspace:*",
		"@barely/email": "workspace:*",
