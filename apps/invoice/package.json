{
	"name": "@barely/invoice",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "pnpm with-env next build",
		"build:preview": "pnpm with-env vercel build",
		"build:production": "pnpm with-env vercel build --prod",
		"clean": "git clean -xdf .cache .next .turbo dist node_modules",
		"clean:next": "git clean -xdf .next",
		"dev": "pnpm with-env next dev --experimental-https --port=3012",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"start": "pnpm with-env next start",
		"typecheck": "tsc --noEmit",
		"with-env": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@barely/api": "workspace:*",
		"@barely/atoms": "workspace:*",
		"@barely/auth": "workspace:*",
		"@barely/hooks": "workspace:*",
		"@barely/lib": "workspace:*",
		"@barely/ui": "workspace:*",
		"@barely/utils": "workspace:*",
		"@barely/validators": "workspace:*",
		"@stripe/react-stripe-js": "catalog:",
		"@stripe/stripe-js": "catalog:",
		"@t3-oss/env-nextjs": "catalog:",
		"@tanstack/react-query": "catalog:",
		"@tanstack/react-query-devtools": "^5.80.10",
		"@trpc/client": "catalog:",
		"@trpc/server": "catalog:",
		"@vercel/edge": "^0.1.2",
		"dotenv-cli": "^7.4.1",
		"drizzle-orm": "catalog:",
		"jiti": "^1.21.0",
		"lucide-react": "^0.441.0",
		"next": "catalog:",
		"postcss": "catalog:",
		"react": "catalog:react19",
		"react-dom": "catalog:react19",
		"sharp": "catalog:",
		"sonner": "catalog:",
		"superjson": "^2.2.1",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@babel/core": "^7.22.9",
		"@barely/eslint-config": "workspace:*",
		"@barely/prettier-config": "workspace:*",
		"@barely/tailwind-config": "workspace:*",
		"@barely/tsconfig": "workspace:*",
		"@svgr/webpack": "^6.5.1",
		"@tailwindcss/typography": "catalog:",
		"@types/node": "catalog:",
		"@types/react": "catalog:react19",
		"@types/react-dom": "catalog:react19",
		"autoprefixer": "^10.4.14",
		"eslint": "catalog:",
		"postcss": "catalog:",
		"prettier": "catalog:",
		"tailwindcss": "catalog:",
